<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.fintasys.the_15_puzzle_game">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="de.fintasys.the_15_puzzle_game.MainActivity"
            android:label="@string/title_main_activity"/>
        <activity android:name="de.fintasys.the_15_puzzle_game.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.fintasys.the_15_puzzle_game.MediaGalleryActivity"
            android:label="@string/title_media_gallery_activity"/>
        <activity
            android:name="de.fintasys.the_15_puzzle_game.GameActivity"
            android:label="@string/title_game_activity"/>
    </application>

</manifest>